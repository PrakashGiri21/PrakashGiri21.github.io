          li
            a(href="") LinkedIn
      .columns.three
        strong OTHER SHOPS
        ul
          li
            a(href="") TEST1
          li
            a(href="") TEST2
          li
            a(href="") TEST3
          li
            a(href="") TEST4
      .columns.six
        strong Signup for our newsletter
        form
          .columns.six
            input.u-full-width(type="email" placeholder="Your email")
          .columns.four
             input.button-primary(type="submit")  
          
      
              
